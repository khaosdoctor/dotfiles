# gaps between windows
gaps inner 5
gaps outer 2

# disable gaps when there's only one window
smart_gaps on

# hide borders close to the edge of the screen
hide_edge_borders smart_no_gaps

default_border normal 2

# Align titles and shows icons on title bars
title_align center
for_window [all] title_window_icon yes
for_window [all] title_window_icon padding 10px
