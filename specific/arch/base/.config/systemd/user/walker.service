[Unit]
Description=Start Walker launcher after Elephant
Requires=elephant.service
After=elephant.service
BindsTo=elephant.service
PartOf=graphical-session.target
StartLimitIntervalSec=30
StartLimitBurst=20

[Service]
Type=simple
ExecStartPre=/usr/bin/bash -lc 'until [ -n "$WAYLAND_DISPLAY" ] && [ -S "$XDG_RUNTIME_DIR/$WAYLAND_DISPLAY" ]; do sleep 0.1; done'
ExecStart=/usr/bin/walker --gapplication-service
Restart=on-failure
RestartSec=0.5

[Install]
WantedBy=graphical-session.target
