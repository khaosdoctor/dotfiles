##### CUSTOM KEYBINDS #####
set $alt Mod1
# Clipboard Screenshots
# Full screen
bindsym Print exec --no-startup-id flameshot full --clipboard
bindsym $mod+$alt+3 exec --no-startup-id flameshot full --clipboard
# Selection
bindsym $mod+$alt+4 exec --no-startup-id flameshot gui --clipboard

# File Screenshots
# Full screen
bindsym Ctrl+Print exec --no-startup-id flameshot full --path ~/Pictures/Screenshots
bindsym Ctrl+$mod+3 exec --no-startup-id flameshot full --path ~/Pictures/Screenshots
# Selection
bindsym Ctrl+$mod+4 exec --no-startup-id flameshot gui --path ~/Pictures/Screenshots

# Close on meta+q
bindsym $mod+q kill

# Player Controls and media keys
# This won't work in Keychron because there's no PlayPause sym
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Clipcat clipboard manager (requires clipcat)
bindsym $alt+$mod+c exec clipcat-menu

# Rofimoji picker (requires rofimoji)
bindsym ctrl+$mod+space exec rofi -modi "emoji:rofimoji --action copy --skin-tone neutral" -show emoji

bindsym $mod+$alt+s sticky toggle

#
# Scratchpad:
#
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# alt tab
bindsym $mod+Tab exec rofi -show window -modi window

# cycle workspaces
bindsym $mod+Escape workspace next

# Power management menu
set $Locker "swaylock -F -l --indicator-idle-visible --indicator-radius 350 --image $(find $HOME/.config/feh/wallpapers/landscape/. -type f | shuf -n1)"
set $Message "swaynag -f 'Ubuntu' -m 'Power: (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (q) shutdown, (w) windows reboot'"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (q) shutdown, (w) windows reboot
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default", exec killall swaynag
    bindsym e exec --no-startup-id swaymsg exit, mode "default", exec killall swaynag
    bindsym s exec --no-startup-id systemctl suspend, mode "default", exec killall swaynag
    bindsym h exec --no-startup-id systemctl hibernate, mode "default", exec killall swaynag
    bindsym r exec --no-startup-id reboot, mode "default", exec killall swaynag
    bindsym q exec --no-startup-id shutdown, mode "default", exec killall swaynag
    bindsym w exec --no-startup-id sudo wreboot, mode "default", exec killall swaynag

    # back to normal: Enter or Escape
    bindsym Return mode "default"; exec killall swaynag
    bindsym Escape mode "default"; exec killall swaynag
}
bindsym $mod+Ctrl+q mode "$mode_system"; exec $Message

# rofi power menu
bindsym Ctrl+$mod+Delete exec "SUDO_ASKPASS=~/.config/rofi/rofi-askpass.sh rofi -show power-menu -modi power-menu:$HOME/.config/rofi/power-menu.sh"

# Show message for split mode
mode split_mode {
  # split in horizontal orientation
  bindsym h split h

  # split in vertical orientation
  bindsym v split v

  bindsym Escape mode "default"; exec killall swaynag
  bindsym Return mode "default"; exec killall swaynag
}
bindsym $mod+s mode "split_mode"; exec swaynag -f Ubuntu -t warning -m 'Split mode'
