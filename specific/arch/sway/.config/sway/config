set $alt Mod1
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Terminal emulator
set $term kitty

# Application launcher
set $menu wofi -S drun

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Fira Sans SemiBold 12
#font pango:CaskaydiaCove Nerd Font 10

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Custom start scripts
include ~/.config/sway/custom/start_scripts.config
include ~/.config/sway/custom/output.config
include ~/.config/sway/custom/input.config
include ~/.config/sway/custom/window_rules.config

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier


# CUSTOM CONFIG
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP XDG_CURRENT_SESSION

exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK
# gaps between windows
gaps inner 3
#gaps outer 2

# disable gaps when there's only one window
smart_gaps on

# hide borders close to the edge of the screen
hide_edge_borders smart_no_gaps

default_border normal 2

# Align titles and shows icons on title bars
title_align center
# Bar configuration
bar swaybar_command waybar

focus_follows_mouse no

## CUSTOM SCRIPTS
include ~/.config/sway/custom/keybinds.config
include ~/.config/sway/custom/themes/dracula.config
