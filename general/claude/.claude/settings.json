{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(nvim:*)",
      "Read(**/Obsidian/**)",
      "Glob(**/Obsidian/**)",
      "Grep(**/Obsidian/**)",
      "Read(**/.claude/**)",
      "Glob(**/.claude/**)",
      "Grep(**/.claude/**)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -d \"$PWD/.git\" ] || [ -f \"$PWD/package.json\" ] || [ -f \"$PWD/Cargo.toml\" ] || [ -f \"$PWD/go.mod\" ] || [ -f \"$PWD/pom.xml\" ]; then echo '\n# Code Repository Detected - Explain Skill Loaded\n' && cat ~/.claude/skills/explain/SKILL.md | tail -n +4; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "context-mode@claude-context-mode": true
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": false
}
